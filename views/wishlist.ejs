                                <span class="ml-1"> </span>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>

            </div>
        </header>


        <% if (product.length==0) { %>
            <div class="col-12 text-center">
                <img src="https://ibellstore.com/images/no-item-found-here.png" alt="no order"
                    style="width: 400px; height:300px ;">
            </div>
            <% } else { %>




                <!-- <div style="display: flex; justify-content: center;"><h1 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: bold;">My wishlist</h1></div> -->
                <div style="display: flex; justify-content: center;">
                    <h2
                        style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: bold; color: rgba(184, 103, 153, 0.767);">
                        My wishlist</h2>
                </div>

                <div class="container">

                    <div class="row">

                        <% product.forEach(item=>{ %>

                            <div class="col-6 col-sm-6 col-md-4 col-lg-3 item">

                                <div class="wishlist-box">

                                    <div class="wishlist-img" style="height:350px">
                                        <a href="/productDetails/<%=item._id%>">

                                            <img style="object-fit: contain;" class="primary blur-up lazyload"
                                                data-src="http://localhost:4000/product-images/<%= item.mainImage.filename%>"
                                                src="http://localhost:4000/product-images/<%= item.mainImage.filename%>"
                                                alt="image" title="product">
                                        </a>
                                    </div>
                                    <div class="wishlist-content">

                                        <h6>name : <%= item.name %>
                                        </h6>
                                        <h6>price : â‚¹<%= item.price %>
                                        </h6>

                                        <a href="/remove-wishlist/<%= item._id %>"><ion-icon
                                                name="heart"></ion-icon></a>


                                        <a href="/addto-cart/<%= item._id  %> " style="color: black;"><ion-icon
                                                name="cart-sharp"></ion-icon></a>

                                    </div>



                                </div>

                            </div>

                            <% }) %>

                    </div>


                </div>
                <% }%>
                    <script src="/assetsuser/js/slick.min.js"></script>
                    <script src="/assetsuser/js/jquery.counterup.min.js"></script>
                    <script src="/assetsuser/js/jquery.ajaxchimp.min.js"></script>
                    <script src="/assetsuser/js/custom.js"></script>

                    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
                    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    </body>

