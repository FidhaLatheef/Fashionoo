  <!-- Shop Section Begin -->
  <section class="shop spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <div class="shop__sidebar">
            <div class="shop__sidebar__search">            
              
                <form action="/search-product"   role="search">
                    <input  type="search"   name="search" placeholder="Search" aria-label="Search">
                    <button class="select_option_list" type="submit"><span class="icon_search search-switch"></span></button>
                </form>
                        
            
            </div>
            <div class="shop__sidebar__accordion">
              <div class="accordion" id="accordionExample">

                <!-- <div class="single_sedebar mb-2">
                  <div class="select_option">
                      <div class="select_option_list">Category</div>
                  </div>
              </div> -->

                <form action="/filter-product" method="get">
                  <label for="SortBy" class="hidden"></label>

                  <select
                    name="filterBy"
                    id="SortBy"
                    class="btn_3"
                  >
                    <option value="title-ascending" selected="selected">
                      category
                    </option>

                   
                        <% categories.forEach((item)=>{ %>
                          <option value="<%=item.category  %>">
                            <%= item.category %>
                          </option>
                          <% }) %>

                      </select>
                 

                  <button type="submit" class="btn btn-secondary btn--small">
                    Filter
                  </button>
                </form>

               
                <div  class="single_sedebar" style="margin-top: 5px">
                  <form  action="/sort-product" method="get">
                    <label for="SortBy" id="SortBy"></label>

                    <select name="SortBy" class="btn_3" id="">
                      <option value="sort">Price</option>
                      <option value="low-high">low to high</option>
                      <option value="high-low">high-low</option>
                    </select>
                    <button type="submit" class="btn btn-secondary btn--small">
                    Sort
                  </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9">

            <% if (products.length==0) { %>
                <div class="col-12 text-center">
                    <img src="https://ibellstore.com/images/no-item-found-here.png"
                        alt="no order" style="width: 400px; height:300px ;">
                </div>
                <% } else { %>


          <div class="row">

            <% products.forEach(function(product){ %>
            <div class="col-lg-4 col-sm-4">
              <div class="single_product_item" style="margin: 5px">
                <a href="/productDetails/<%= product._id %>">
                  <img
                    style="width: 250px; height: 270px; border-radius: 1px"
                    src="http://localhost:4000/product-images/<%= product.mainImage.filename%>"
                    class="img-fluid"
                /></a>


                <h4 class="p1" style="margin: 5px; color: black"><%= product.name %></h4>
                


                <p style="margin-left: 5px; font-weight: bolder; color: black">
                  â‚¹<%= product.price %>
                  <a style="margin-left: 20px" href="/addto-cart/<%=product._id%>"
                    ><i
                      style="color: #000000"
                      class="flaticon-shopping-cart-black-shape"
                    ></i>
                  </a>
                </p>

              </div>
            </div>
            <% }) %> 
          </div>
        </div>
      </div>
    </div>
  </section>
  <% } %>
