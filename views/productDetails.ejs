  <script>
    // select the image container element
    var container = document.querySelector(".image-container");
    
    // add an event listener for the "mouseover" event
    container.addEventListener("mouseover", function() {
      // select the image element inside the container
      var image = container.querySelector("img");
      
      // update the CSS properties of the image element to zoom it in
      image.style.transform = "scale(1.5)";
      image.style.transition = "transform 0.5s ease";
    });
    
    // add an event listener for the "mouseout" event
    container.addEventListener("mouseout", function() {
      // select the image element inside the container
      var image = container.querySelector("img");
      
      // reset the CSS properties of the image element to zoom it out
      image.style.transform = "scale(1)";
      image.style.transition = "transform 0.5s ease";
    });
    
